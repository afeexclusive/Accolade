@model Accolades.ViewModels.StudentsViewModel

@{
    ViewData["Title"] = "Mapping";

    List<string> Headers = ViewBag.Headings;
}

<h1>Mapping</h1>

<h4>StudentsViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Mapping" asp-controller="Student" method="post">
            <div class="row">
