@model Accolades.ViewModels.StudentsViewModel

@{
    ViewData["Title"] = "Email Mapping";

    List<string> Headers = ViewBag.Headings;}

<h1>Mapping</h1>

<h4>StudentsViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="EmailMapping" asp-controller="Student" method="post">
            <div class="row">
                <div class="col-md-4 offset-1">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <select id="ddlCustomers" asp-for="FirstName" class="form-control">
                            @foreach (var item in Headers)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <select id="ddlCustomersaa" asp-for="LastName" class="form-control">
                            @foreach (var item in Headers)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DateOfBirth" class="control-label"></label>
                        <select asp-for="DateOfBirth" class="form-control">
                            @foreach (var item in Headers)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <select asp-for="Email" class="form-control">
                            @foreach (var item in Headers)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                </div>

                <div class="col-md-4 offset-1">


                </div>

            </div>
            <input asp-for="FileName" type="text" hidden value="@Headers.Last()" />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script type="text/javascript" src=https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js></script>
    <script type="text/javascript">
        $(function () {
            $("#ddlCustomers").select2();
            $("#ddlCustomersaa").select2();
        });
    </script>
    }
