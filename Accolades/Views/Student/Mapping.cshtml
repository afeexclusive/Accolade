                        <select asp-for="AdmissionNumber" class="form-control">
                            @foreach (var item in Headers)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        @*@Html.DropDownListFor(x => Model.AdmissionNumber, new SelectList(Headers, "Value", "Text"), htmlAttributes: new { @class = "form-control", id = "adm" })*@
                        <span asp-validation-for="AdmissionNumber" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <select asp-for="FirstName" class="form-control">
